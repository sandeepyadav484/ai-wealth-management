# Create deployment script
cat > deploy.sh << 'EOF'
#!/bin/bash
echo "🚀 Deploying AI Wealth Management System..."

# Check if git is initialized
if [ ! -d ".git" ]; then
    echo "📁 Initializing Git repository..."
    git init
fi

# Add all files
echo "📋 Adding files to Git..."
git add .

# Commit changes
echo "💾 Committing changes..."
git commit -m "Deploy: AI Wealth Management System $(date +%Y-%m-%d)"

echo "✅ Ready for GitHub push!"
echo ""
echo "Next steps:"
echo "1. Create GitHub repo: https://github.com/new"
echo "2. git remote add origin <your-repo-url>"
echo "3. git push origin main"
echo "4. Deploy via Streamlit Cloud: https://share.streamlit.io"
EOF

chmod +x deploy.sh.streamlit/secrets.toml
